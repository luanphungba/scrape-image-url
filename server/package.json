{
  "name": "backend",
  "version": "0.0.1",
  "author": "Luan Phung",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:prod": "npx nest build && npx tsc -p tsconfig.build.json",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "typeorm": "typeorm-ts-node-esm",
    "db:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ormconfig src/database/migrations/migrations",
    "db:create": "ts-node ./node_modules/typeorm-extension/dist/cli/index.js db:create -d ormconfig",
    "db:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ormconfig",
    "db:seed": "ts-node ./node_modules/typeorm-extension/dist/cli/index.js seed -d ormconfig",
    "new": "hygen new",
    "db:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ormconfig",
    "schema:drop": "yarn run typeorm schema:drop",
    "watch:dev": "ts-node-dev src/main.ts",
    "debug:dev": "cross-env TS_NODE_CACHE=false ts-node-dev --inspect --ignore '/^src/.*\\.spec\\.ts$/' src/main.ts"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.3.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/cqrs": "^10.2.6",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/typeorm": "^10.0.1",
    "@types/puppeteer-core": "^7.0.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "~0.5.1",
    "class-validator": "~0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nestjs-cls": "^3.6.0",
    "nestjs-i18n": "^10.4.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "puppeteer": "^22.12.1",
    "puppeteer-core": "^22.12.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "source-map-support": "^0.5.21",
    "tslib": "^2.6.2",
    "typeorm": "^0.3.19",
    "typeorm-extension": "2.8.1",
    "typeorm-transactional": "~0.5.0",
    "uniqid": "^5.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@handfish/hygen": "^6.1.6",
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^3.0.13",
    "@types/puppeteer": "^7.0.4",
    "@types/uuid": "^9.0.7",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
